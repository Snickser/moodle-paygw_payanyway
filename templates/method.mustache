{{!
    @template paygw_payanyway/method

    Context variables required for this template:
    * fee - the amount to pay
    * currency - the currency of this payment
    * description - what the user paying for

    Example context (json):
    {
        "fee": "10.05",
        "currency": "RUB",
        "description": "for enrolment in course",
        "enrolperiod": "1",
        "enrolperiod_desc": "day"
        "passwordmode": "1"
        "skipmode": "1"
        "suggested": "100"
        "group": "Test"
        "maxcost": "10"
    }

}}
<form id="payanyway-method-select" action="{{url}}/payment/gateway/payanyway/pay.php" class="payanyway-form" method="post">
    <div class="cost-display">
        <div style="text-align: center;">

{{^fixdesc}}
<p>{{# str }} abouttopay, paygw_robokassa {{/ str}} "{{description}}".</p>
{{/fixdesc}}

<p>{{# str }} paymore, paygw_payanyway {{/ str}}</p>

            <h3>{{# str }} cost {{/ str}}:

<input type="number" id="cost_self" name="cost_self" min="{{fee}}" {{#maxcost}}max="{{maxcost}}"{{/maxcost}}
value="{{#suggest}}{{suggest}}{{/suggest}}{{^suggest}}{{fee}}{{/suggest}}"
size="7" step="0.01">

 {{currency}}</h3>

{{#enrolperiod}}
<p><h4>{{# str }} enrolperiod, enrol_payanyway {{/ str}} ({{enrolperiod_desc}}): {{enrolperiod}}</h4></p>
{{/enrolperiod}}

<br>
<img src="{{{image}}}" alt="PayAnyWay" height="20">


        </div>
    </div>

<br><br>

    <div class="hidden-inputs">
        <input type="hidden" class="hidden-inputs" id="component" name="component" value="{{component}}">
        <input type="hidden" class="hidden-inputs" id="paymentarea" name="paymentarea" value="{{paymentarea}}">
        <input type="hidden" class="hidden-inputs" id="itemid" name="itemid" value="{{itemid}}">
        <input type="hidden" class="hidden-inputs" id="description" name="description" value="{{description}}">
    </div>

    <div style="text-align: center;">

{{#skipmode}}
<p>
{{# str }} skipmode_text, paygw_payanyway {{/ str}} <br>
<button type="submit" id="skipmode" name="skipmode" value="1" class="btn btn-secondary" style="background-color: lightgrey; color: black;" id="robokassa-modal-submit-btn">{{# str }} skippaymentbutton, paygw_payanyway {{/ str }}</button>
</p><br>
{{/skipmode}}

{{^skipmode}}
{{#passwordmode}}
<p>
{{# str }} password_text, paygw_payanyway {{/ str}} <br>
{{# str }} password {{/ str}}: <input type="password" id="password" name="password" value="" autocomplete="off">
</p><br>
{{/passwordmode}}
{{/skipmode}}

<p><b>{{# str }} paymentinstant {{/ str}}</b></p>

    <button type="submit" class="btn btn-primary" id="payanyway-modal-submit-btn">{{# str }} sendpaymentbutton, paygw_payanyway {{/ str }}</button>
    </div>
</form>

